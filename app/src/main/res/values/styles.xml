<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="result_button" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="value_label">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">"@font/poppins"</item>
    </style>

    <style name="bmi_result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">43dp</item>
    </style>

    <style name="white_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>